<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://XX_MYSQLHOST_XX/ambra</property>
    <property name="connection.username">XX_MYSQLUSERNAME_XX</property>
    <property name="connection.password">XX_MYSQLPASSWORD_XX</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

    <property name="show_sql">true</property>

    <property name="format_sql">true</property>
    <!--property name="hbm2ddl.auto">create</property-->

    <!-- JDBC connection pool (use the built-in) -->
    <property name="connection.pool_size">1</property>
    <property name="current_session_context_class">thread</property>

    <!-- Mapping files will go here.... -->
    <mapping resource="DublinCore.hbm.xml" />
    <mapping resource="CustomTypes.hbm.xml" />
    <mapping resource="Article.hbm.xml" />
    <mapping resource="ObjectInfo.hbm.xml" />
    <mapping resource="RelatedArticle.hbm.xml" />
    <mapping resource="Category.hbm.xml" />
    <mapping resource="License.hbm.xml"/>

    <mapping resource="UserProfile.hbm.xml" />
    <mapping resource="UserAccount.hbm.xml" />
    <mapping resource="UserRole.hbm.xml" />
    <mapping resource="UserPreferences.hbm.xml" />
    <mapping resource="UserPreference.hbm.xml" />
    <mapping resource="AuthenticationId.hbm.xml" />

    <mapping resource="Citation.hbm.xml" />
    <mapping resource="Representation.hbm.xml"/>

    <mapping resource="Annotation.hbm.xml" />
    <mapping resource="ByteArrayBlob.hbm.xml" />
    <mapping resource="RatingContent.hbm.xml" />
    <mapping resource="TrackbackContent.hbm.xml" />
    <mapping resource="RatingSummaryContent.hbm.xml" />
    <mapping resource="Reply.hbm.xml" />

    <mapping resource="Syndication.hbm.xml" />
    <mapping resource="Aggregations.hbm.xml"/>
    <mapping resource="EditorialBoard.hbm.xml"/>
  </session-factory>
</hibernate-configuration>