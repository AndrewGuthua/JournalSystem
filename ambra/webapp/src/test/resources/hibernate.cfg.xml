<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!--Hibernate configuration for tests; connects to an in-memory HSQLDB instance which is created on startup-->
<hibernate-configuration>
  <session-factory>
    <!-- Database connection settings -->
    <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
    <property name="connection.url">jdbc:hsqldb:mem:testdb</property>
    <property name="connection.username">sa</property>
    <property name="connection.password"></property>

    <!--<property name="connection.url">jdbc:mysql://localhost/ambra2</property>-->
    <!--<property name="connection.username">root</property>-->
    <!--<property name="connection.password"></property>-->
    <!--<property name="connection.driver_class">com.mysql.jdbc.Driver</property>-->

    <!-- JDBC connection pool (use the built-in) -->
    <property name="connection.pool_size">1</property>

    <!-- Enable Hibernate's automatic session context management -->
    <property name="current_session_context_class">thread</property>

    <!-- Disable the second-level cache  -->
    <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

    <!-- SQL dialect -->
    <property name="dialect">org.hibernate.dialect.HSQLDialect</property>


    <!-- Drop and re-create the database schema on startup -->
    <property name="hbm2ddl.auto">create-drop</property>

    <property name="show_sql">false</property>
    <property name="format_sql">false</property>

    <!-- Mapping files will go here.... -->
    <mapping resource="hbm/DublinCore.hbm.xml"/>
    <mapping resource="hbm/CustomTypes.hbm.xml"/>
    <mapping resource="hbm/Article.hbm.xml"/>
    <mapping resource="hbm/ObjectInfo.hbm.xml"/>
    <mapping resource="hbm/RelatedArticle.hbm.xml"/>
    <mapping resource="hbm/Category.hbm.xml"/>
    <mapping resource="hbm/License.hbm.xml"/>

    <mapping resource="hbm/UserProfile.hbm.xml"/>
    <mapping resource="hbm/UserAccount.hbm.xml"/>
    <mapping resource="hbm/UserRole.hbm.xml"/>
    <mapping resource="hbm/UserPreferences.hbm.xml"/>
    <mapping resource="hbm/UserPreference.hbm.xml"/>
    <mapping resource="hbm/AuthenticationId.hbm.xml"/>

    <mapping resource="hbm/Citation.hbm.xml"/>
    <mapping resource="hbm/Representation.hbm.xml"/>

    <mapping resource="hbm/Annotation.hbm.xml"/>
    <mapping resource="hbm/ByteArrayBlob.hbm.xml"/>
    <mapping resource="hbm/RatingContent.hbm.xml"/>
    <mapping resource="hbm/TrackbackContent.hbm.xml"/>
    <mapping resource="hbm/RatingSummaryContent.hbm.xml"/>
    <mapping resource="hbm/Reply.hbm.xml"/>

    <mapping resource="hbm/Syndication.hbm.xml"/>
    <mapping resource="hbm/Aggregations.hbm.xml"/>
    <mapping resource="hbm/EditorialBoard.hbm.xml"/>
    <mapping resource="hbm/CitedPerson.hbm.xml" />
    <mapping resource="hbm/ArticleContributor.hbm.xml" />

  </session-factory>
</hibernate-configuration>
