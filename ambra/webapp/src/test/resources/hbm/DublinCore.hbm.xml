<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.topazproject.ambra.models">
  <class name="DublinCore" table="DublinCore">
    <id name="identifier" column="articleUri" length="100">
      <generator class="org.ambraproject.hibernate.AmbraIdGenerator" />
    </id>

    <property name="title" column="title" />
    <property name="description" column="description" />
    <property name="date" column="date"/>
    <property name="rights" column="rights"/>
    <property name="type" column="type" type="org.ambraproject.hibernate.URIType"/>
    <property name="language" column="language"/>
    <property name="publisher" column="publisher"/>
    <property name="format" column="format"/>
    <property name="available" column="available"/>
    <property name="issued" column="issued"/>
    <property name="submitted" column="submitted"/>
    <property name="accepted" column="accepted"/>
    <property name="copyrightYear" column="copyrightYear"/>
    <property name="created" column="created"/>
    <property name="modified" column="modified"/>
    <property name="conformsTo" column="conformsTo" type="org.ambraproject.hibernate.URIType"/>

    <!--Cascade is off as Citations will be copied over as a separate process -->
    <many-to-one name="bibliographicCitation" class="Citation" cascade="none" lazy="false"
                 column="bibliographicCitationUri"/>

    <!--Cascade is off as Citations will be copied over as a separate process -->
    <list name="references" table="DublinCoreReferences" cascade="all" lazy="false">
      <key column="articleUri"/>
      <list-index column="sortOrder"/>
      <many-to-many class="Citation" column="citationUri"/>
    </list>

    <set name="license" table="DublinCoreLicenses" lazy="false">
      <key column="articleUri"/>
      <many-to-many class="License" column="licenseUri"/>
    </set>

    <set name="subjects" table="DublinCoreSubjects" lazy="false">
      <key column="articleUri" />
      <element column="subject" type="string" />
    </set>

    <set name="creators" table="DublinCoreCreators" lazy="false">
      <key column="articleUri" />
      <element column="name" type="string" />
    </set>

    <set name="contributors" table="DublinCoreContributors"  lazy="false">
      <key column="articleUri" />
      <element column="name" type="string" />
    </set>

    <set name="summary" table="DublinCoreSummary" lazy="false">
      <key column="articleUri" />
      <element column="text" type="string" />
    </set>
  </class>
</hibernate-mapping>
