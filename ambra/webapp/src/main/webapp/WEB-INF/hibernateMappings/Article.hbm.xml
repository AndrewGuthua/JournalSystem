<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.topazproject.ambra.models">

  <class name="Article" table="Article">
    <id name="id" type="org.ambraproject.hibernate.URIType" column="articleUri" length="100">
      <generator class="org.ambraproject.hibernate.AmbraIdGenerator" />
    </id>
    <property name="state" type="int" column="state"/>
    <property name="eIssn" type="string" column="eIssn" />
    <property name="archiveName" type="string" column="archiveName" />
    <property name="contextElement" type="string" column="contextElement" />

    <many-to-one name="dublinCore" class="DublinCore" cascade="none" column="dublinCoreIdentifier" lazy="false"/>

    <many-to-one name="isPartOf" class="Article" column="isPartOf"/>

    <list name="parts" table="ArticlePartsJoinTable" cascade="all">
      <key column="articleUri"/>
      <list-index column="sortOrder"/>
      <many-to-many class="ObjectInfo" column="objectInfoUri"/>
    </list>

    <list name="authors" table="ArticleAuthorJoinTable" cascade="all">
      <key column="articleUri" />
      <list-index column="sortOrder" />
      <many-to-many class="ArticleContributor" column="contributorUri"/>
    </list>

    <list name="editors" table="ArticleEditorJoinTable" cascade="all">
      <key column="articleUri" />
      <list-index column="sortOrder" />
      <many-to-many class="ArticleContributor" column="contributorUri"/>
    </list>

    <set name="categories" table="ArticleCategoryJoinTable" cascade="all" lazy="false">
      <key column="articleUri" />
      <many-to-many class="Category" column="articleCategoryUri"/>
    </set>

    <set name="articleType" table="ArticleTypes" lazy="false" cascade="all">
      <key column="articleUri" />
      <element column="typeUri" type="org.ambraproject.hibernate.URIType" />
    </set>

    <set name="representations" table="ArticleRepresentationsJoinTable" cascade="all">
      <key column="articleUri" />
      <many-to-many class="Representation" column="representationsUri"/>
    </set>

    <set name="relatedArticles" table="ArticleRelatedJoinTable" cascade="all">
      <key column="articleUri" />
      <many-to-many class="RelatedArticle" column="articleRelatedUri"/>
    </set>
  </class>

</hibernate-mapping>
