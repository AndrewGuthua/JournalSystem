<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.topazproject.ambra.models">
  <class name="ObjectInfo" table="ObjectInfo">
    <id name="id" type="org.ambraproject.hibernate.URIType" column="objectInfoUri" length="100">
      <generator class="org.ambraproject.hibernate.AmbraIdGenerator" />
    </id>
    <property name="eIssn" type="string" column="eIssn" />
    <property name="contextElement" type="string" column="contextElement" />

    <many-to-one name="isPartOf" class="Article" column="isPartOf" cascade="none"/>

    <set name="representations" table="ObjectInfoRepresentationsJoinTable" cascade="save-update,all-delete-orphan" lazy="false">
      <key column="articleUri" />
      <many-to-many class="Representation" column="representationsUri"/>
    </set>

    <many-to-one name="dublinCore" class="DublinCore" cascade="save-update,delete" column="dublinCoreIdentifier" lazy="false"/>
  </class>

</hibernate-mapping>
