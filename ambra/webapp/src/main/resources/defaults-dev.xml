<config>
  <ambra>
    <platform>
      <dummySsoEnabled>true</dummySsoEnabled>
      <port>
        <doi>11080</doi>
      </port>
    </platform>

    <topaz>
      <!-- Configuration to talk to Fedora -->
      <blobStore>
        <fedora>
          <blobTypes>
            <representation>
              <pidNs>doi</pidNs> <!-- must be configured in "retainPIDs" of fedora.fcfg -->
              <uriPrefix>${ambra.aliases.doiPrefix}/</uriPrefix>
            </representation>
            <annotation>
              <pidNs>Ambra</pidNs> <!-- must be configured in "retainPIDs" of fedora.fcfg -->
              <uriPrefix>${ambra.aliases.annoteaBodyId}</uriPrefix>
            </annotation>
          </blobTypes>
        </fedora>
      </blobStore>
    </topaz>
  </ambra>

  <!-- See the AmbraStruts2Filter dispatcher on how struts constants are configured -->
  <struts>
    <devMode>true</devMode>
  </struts>
</config>
