  <!-- Profiles Section: Define custom profiles here -->

  <profiles>

    <!-- it-startenv: Start and stop fedora/ecqs/mulgara before and after integration testing -->

    <profile>
      <id>it-startenv</id>
      <dependencies>
        <dependency>
          <groupId>log4j</groupId>
          <artifactId>log4j</artifactId>
          <scope>provided</scope>
        </dependency>
      </dependencies>

      <build>
        <plugins>
          <!-- Run ant-tasks:ecqs/fedora/mulgara-start/stop around integration tests -->
          <plugin>
            <groupId>org.ambraproject.plugins</groupId>
            <artifactId>ant-tasks</artifactId>
            <version>${project.version}</version>
            <executions>
              <execution>
                <id>it-startenv-exe</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>ecqs-install</goal>
                  <goal>mulgara-install</goal>
                  <goal>fedora-install</goal>
                  <goal>ecqs-start</goal>
                  <goal>mulgara-start</goal>
                  <goal>fedora-start</goal>
                </goals>
                <configuration>
                  <SPAWN>true</SPAWN>      <!-- Spawn the start command -->
                </configuration>
              </execution>
              <execution>
                <id>it-stopenv-exe</id>
                <phase>post-integration-test</phase>
                <goals>
                  <goal>ecqs-stop</goal>
                  <goal>fedora-stop</goal>
                  <goal>mulgara-stop</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <!-- Enable this profile when running the reports -->
      <id>reports</id>
      <build>
        <plugins>
          <!-- Set up the extra sources and resources, and run everything in it's own directory -->
          <plugin>
            <groupId>org.topazproject.plugins</groupId>
            <artifactId>reports-plugin</artifactId>
            <version>${topaz.version}</version>
            <executions>
              <execution>
                <goals><goal>configure-directories</goal></goals>
              </execution>
            </executions>
          </plugin>

          <!-- config cobertura plugin -->
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>cobertura-maven-plugin</artifactId>
            <version>2.2</version>
            <configuration>
              <instrumentation>
                <ignores>
                  <ignore>org.apache.commons.logging.Log</ignore>
                </ignores>
              </instrumentation>
            </configuration>
          </plugin>

          <!-- Run all groovy tests too -->
          <plugin>
            <groupId>org.codehaus.groovy.maven</groupId>
            <artifactId>gmaven-plugin</artifactId>
            <executions>
              <execution>
                <id>compile-all-groovy-tests</id>
                <goals>
                  <goal>testCompile</goal>
                </goals>
                <configuration>
                  <sources>
                    <fileset>
                      <directory>${pom.basedir}/src/test/groovy</directory>
                      <includes>
                        <include>**/*.groovy</include>
                      </includes>
                    </fileset>
                    <fileset>
                      <directory>${pom.basedir}/src/it/groovy</directory>
                      <includes>
                        <include>**/*.groovy</include>
                      </includes>
                    </fileset>
                  </sources>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>packages</id>
      <modules>
        <module>packages</module>
      </modules>
    </profile>

    <profile>
      <id>distribution</id>
      <modules>
        <module>distribution</module>
      </modules>
    </profile>
  </profiles>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.mortbay.jetty</groupId>
          <artifactId>maven-jetty-plugin</artifactId>
          <version>${jetty.version}</version>
        </plugin>

        <plugin>
          <groupId>org.codehaus.groovy.maven</groupId>
          <artifactId>gmaven-plugin</artifactId>
          <version>1.0-rc-4</version>
          <executions>
            <execution>
              <id>compile</id>
              <goals>
                <!-- <goal>generateStubs</goal> -->
                <goal>compile</goal>
              </goals>
            </execution>
            <execution>
              <id>copy-test-sources</id>
              <phase>generate-test-sources</phase>
              <goals><goal>execute</goal></goals>
              <configuration>
                <source>
                  String s = File.separator
                  File runDir = new File(project.build.directory, "groovy-test-sources")
                  File srcDir = project.properties['running-integration-tests'] ?
                                    new File(pom.basedir, "src${s}it${s}groovy") :
                                    new File(pom.basedir, "src${s}test${s}groovy")

                  ant.delete(dir: runDir, quiet: true)
                  if (srcDir.exists()) {
                    ant.copy(toDir: runDir) {
                      fileset(dir: srcDir)
                    }
                  }
                </source>
              </configuration>
            </execution>
            <execution>
              <id>compile-tests</id>
              <goals><goal>testCompile</goal></goals>
              <configuration>
                <sources>
                  <fileset>
                    <directory>${project.build.directory}/groovy-test-sources</directory>
                    <includes>
                      <include>**/*.groovy</include>
                    </includes>
                  </fileset>
                </sources>
              </configuration>
            </execution>
          </executions>
        </plugin>

        <plugin>
          <groupId>org.topazproject.plugins</groupId>
          <artifactId>integration-tests-plugin</artifactId>
          <version>${topaz.version}</version>
          <executions>
            <execution>
              <goals>
                <goal>run-it</goal>
              </goals>
            </execution>
          </executions>
        </plugin>

        <plugin>
          <artifactId>maven-assembly-plugin</artifactId>
          <version>2.2-beta-2</version>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>2.0.1</version>
        <configuration>
          <inputDirectory>${project.reporting.outputDirectory}/apidocs</inputDirectory>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.0-beta-7</version>
        <configuration>
          <goals>deploy</goals>                           <!-- disable site deploy -->
          <useReleaseProfile>false</useReleaseProfile>    <!-- no javadoc and source jars -->
          <tagBase>http://svn.ambraproject.org/svn/ambra/tags</tagBase>
          <autoVersionSubmodules>true</autoVersionSubmodules>
          <preparationGoals>clean install</preparationGoals>
          <arguments>-Ppackages,rpm,distribution,release</arguments>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.4.3</version>
        <configuration>
          <trimStackTrace>false</trimStackTrace>
        </configuration>
      </plugin>
    </plugins>

    <defaultGoal>install</defaultGoal>
  </build>
</project>
